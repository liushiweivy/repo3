.page-wrap {
    width: 90%;
    min-width: 1320px;
    min-height: 100%;
    margin: 0 auto;
    padding: 24px 0;
    display: flex;
}

.system-right {
    margin-left: 16px;
    padding: 32px 72px;
    background-color: #fff;
    border-radius: 8px;
    flex: 1;

    .rules-box {
        display: flex;
        align-items: center;
        border-radius: 6px;
        border: 1px solid rgba(0, 0, 0, 0.1);
        margin-bottom: 24px;

        .rule-tit {
            width: 30%;
            font-size: 18px;
            font-weight: bold;
            color: rgba(0, 0, 0, 0.85);
            padding-left: 24px;
        }
    }
    .rule-btn-box{
        border-top:1px solid rgba(0,0,0,0.1);
        margin-top:60px;
        height: 80px
        display: flex;
        justify-content: center;
        align-items: center;
        }
}